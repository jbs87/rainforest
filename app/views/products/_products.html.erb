<table style="width:100%" border="1">
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Category</th>
	</tr>
	<% products.each do |product| %>
	<tr>
		<td><%= product.name %></td>
		<td><%= product.description %></td>
		<td><%= product.formatted_price %></td>
		<% if product.category %>
		<td><%= link_to "#{product.category}", category_products_path(product.category) %></td>
		<% end %>
	</tr>
	<% end %>
</table>