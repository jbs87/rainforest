<% if @review.errors.present? %>
$("#review-form-errors").html("<%= escape_javascript(render(:partial => '/products/reviewerror')) %>");
<% else %>
$("#review-form-errors").html("");
$("#review-list").append('<%= escape_javascript(render(:partial => "/products/singlereview",locals: {review:@review})) %>')
$("#review-" + <%= @review.id %>).hide();
$("#review-" + <%= @review.id %>).show("slow");
<% end %>